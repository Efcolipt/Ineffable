{
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit"
  },
  "prettier.requireConfig": true,
  "editor.tabSize": 2,
  "editor.formatOnSave": false,
  "tailwindCSS.experimental.configFile": ".nuxt/tailwind.config.cjs",
  "css.validate": false,
  "files.associations": {
    "*.css": "tailwindcss"
  },
}