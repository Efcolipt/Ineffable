{
  "name": "ineffable",
  "version": "1.5.0",
  "private": true,
  "license": "ISC",
  "author": {
    "name": "Efcolipt",
    "email": "efcolipt@gmail.com"
  },
  "engines": {
    "node": ">=16.10.0"
  },
  "scripts": {
    "build": "nuxt clean && nuxt build",
    "dev": "nuxt prepare && nuxt dev",
    "postinstall": "nuxt prepare",
    "release": "dotenv release-it --",
    "prepare": "husky install",
    "test": "nuxi test"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@kevinmarrec/nuxt-pwa": "^0.17.0",
    "@nuxt/test-utils": "^3.4.2",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@nuxtjs/tailwindcss": "^6.6.6",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/parser": "^5.58.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.0",
    "nuxt": "^3.4.1",
    "nuxt-purgecss": "^2.0.0",
    "prettier": "^2.8.7",
    "release-it": "^15.10.0",
    "sass": "^1.62.0",
    "typescript": "^5.0.4",
    "vitest": "^0.30.1"
  },
  "lint-staged": {
    "**/*.{js,ts,vue}": [
      "eslint --fix --ext \".ts,.js,.vue\" --ignore-path .eslintignore ."
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular",
        "infile": "CHANGELOG.md",
        "header": "# Changelog"
      }
    }
  },
  "commitlint": {
    "rules": {
      "header-max-length": [
        2,
        "always",
        130
      ]
    },
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
